<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
</head>
<body>
    
    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageURL %>" alt="" width="40px"> <%= blog.createdBy.fullName %>
        </div>
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" alt="" width="700px">
        <pre><%= blog.body %></pre>
    </div>


    <div class="container mt-3">
        <h1>Comments <%= comments.length %></h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                  <input type="text" class="form-control" id="content" aria-describedby="content" name="content" placeholder="Comment here">
                </div>
                <button type="submit" class="btn btn-sm btn-primary">Add</button>
            </form>
            
            
        <% } %>
    </div>
    <div class="mt-3">
        <% comments.forEach(comment => { %>
         <div>
            <img src="<%= blog.createdBy.profileImageURL %>" alt="" width="40px"> <%= blog.createdBy.fullName %>
            <pre><%= comment.content %></pre>
         </div>
        <% }) %>
    </div>
    <%- include('./partials/scripts') %>
</body>
</html>
